---
interface Props {
  title: string;
  description: string;
  message: string;
}

const { description, title, message } = Astro.props;

const phoneNumber = "+523332579424"; // Reemplaza con el número de teléfono real
const encodedMessage = encodeURIComponent(message);
const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
---

<div class="bg-white rounded-lg shadow-lg p-8 md:mx-4 w-60 h-6/8">
  <slot />
  <h4 class="text-xl font-bold">{title}</h4>
  <p class="mt-1">{description}</p>
  <a
    href={whatsappLink}
    target="_blank"
    class="block mt-4 p-2 bg-teal-500 rounded-lg text-white text-center"
    >Saber más</a
  >
</div>
