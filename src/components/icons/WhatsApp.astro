    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class=`icon icon-tabler icons-tabler-outline text-blue-500 icon-tabler-brand-whatsapp ${tlwStyles} transition-all duration-200 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-90 hover:opacity-100`
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
