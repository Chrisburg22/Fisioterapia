---
import { getLatestLaunches } from "../services/spacex";
import { type APISpaceXResponse } from "../types/api";
import CardLaunch from "./CardLaunch.astro";
// Como podemos obtener fetching de datos a alguna API

//Astro por defecto ejecuta el javascript en el servidor o en la compilaci√≥n.
const launches = await getLatestLaunches();

console.log(launches);
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(({id,links,details,flight_number:flightNumber,success, name}) => (
      <CardLaunch
        id={id}
        img={links.patch.small}
        details={details ? details : ""}
        name={name}
        success={success}
        flightNumber={flightNumber}
      />
    ))
  }
</div>
